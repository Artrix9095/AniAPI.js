{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES6",
        "module": "commonjs",
        "declaration": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "downlevelIteration": true,
        "outDir": "./types",
        "baseUrl": "./src"
    },
    "include": ["types/**/*.d.ts"],
    "exclude": ["node_modules"]
}